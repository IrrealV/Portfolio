---
/**
 * FloatingControls - Floating buttons group with back-to-top and theme toggle
 * Shows/hides back-to-top based on scroll position
 */
---

<div
  class="fixed bottom-6 right-6 z-50 flex flex-col gap-3"
  id="floating-controls"
>
  <!-- Back to Top Button (hidden initially) -->
  <button
    id="back-to-top"
    type="button"
    aria-label="Volver arriba"
    class="hidden items-center justify-center w-12 h-12 rounded-full bg-(--color-bg-secondary) border border-(--color-border) text-(--color-text-secondary) hover:text-(--color-accent) hover:border-(--color-accent) transition-all duration-300 shadow-lg hover:scale-110"
  >
    <svg
      class="w-5 h-5"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
    </svg>
  </button>

  <!-- Theme Toggle Button -->
  <button
    id="theme-toggle"
    type="button"
    aria-label="Cambiar tema"
    class="flex items-center justify-center w-12 h-12 rounded-full bg-(--color-bg-secondary) border border-(--color-border) text-(--color-text-secondary) hover:text-(--color-accent) hover:border-(--color-accent) transition-all duration-300 shadow-lg hover:scale-110"
  >
    <!-- Sun icon (shown in dark mode) -->
    <svg
      class="w-5 h-5 hidden dark:block text-amber-400"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
      ></path>
    </svg>
    <!-- Moon icon (shown in light mode) -->
    <svg
      class="w-5 h-5 block dark:hidden text-indigo-600"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
      ></path>
    </svg>
  </button>
</div>

<script>
  import { initTheme } from '../../scripts/theme';
  import { initBackToTop, initHashCleanup } from '../../scripts/navigation';

  // Initialize all controls
  initTheme();
  initBackToTop();
  initHashCleanup();

  // Re-init after View Transitions
  document.addEventListener('astro:after-swap', () => {
    initTheme();
    initBackToTop();
    initHashCleanup();
  });
</script>

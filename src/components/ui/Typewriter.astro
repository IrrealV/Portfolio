---
/**
 * Typewriter - Animated text that cycles through developer roles
 */
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<span id="typewriter" class={`inline-block ${className || ''}`}>
  <span id="typewriter-text"></span>
  <span class="typewriter-cursor">|</span>
</span>

<style>
  .typewriter-cursor {
    animation: blink 0.7s step-end infinite;
    color: var(--color-accent);
    font-weight: 300;
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }
</style>

<script>
  import { initTypewriter } from '../../scripts/typewriter';
  document.addEventListener('astro:page-load', initTypewriter);
</script>

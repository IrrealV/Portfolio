---
/**
 * Typewriter - Animated text that cycles through roles
 * Shows: "Front End Developer" → "Back End Developer" → "Fullstack Developer"
 */

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<span id="typewriter" class={`inline-block ${className || ''}`}>
  <span id="typewriter-text"></span>
  <span class="typewriter-cursor">|</span>
</span>

<style>
  .typewriter-cursor {
    animation: blink 0.7s step-end infinite;
    color: var(--color-accent);
    font-weight: 300;
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }
</style>

<script>
  function initTypewriter() {
    const roles = [
      'Front End Developer',
      'Back End Developer',
      'Fullstack Developer',
    ];

    const textEl = document.getElementById('typewriter-text');
    if (!textEl) return;

    let roleIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    let isWaiting = false;

    const typeSpeed = 80;
    const deleteSpeed = 50;
    const waitTime = 1500;

    function type() {
      const currentRole = roles[roleIndex];

      if (isWaiting) {
        return;
      }

      if (!isDeleting) {
        // Typing
        textEl!.textContent = currentRole.substring(0, charIndex + 1);
        charIndex++;

        if (charIndex === currentRole.length) {
          // Finished typing
          if (roleIndex === roles.length - 1) {
            // Last role - stop and hide cursor
            const cursor = document.querySelector(
              '.typewriter-cursor',
            ) as HTMLElement;
            if (cursor) {
              cursor.style.display = 'none';
            }
            return;
          }

          isWaiting = true;
          setTimeout(() => {
            isWaiting = false;
            isDeleting = true;
            type();
          }, waitTime);
          return;
        }
      } else {
        // Deleting
        textEl!.textContent = currentRole.substring(0, charIndex - 1);
        charIndex--;

        if (charIndex === 0) {
          isDeleting = false;
          roleIndex++;
        }
      }

      const speed = isDeleting ? deleteSpeed : typeSpeed;
      setTimeout(type, speed);
    }

    // Start after a small delay
    setTimeout(type, 500);
  }

  // Run on initial load
  initTypewriter();

  // Re-run after View Transitions
  document.addEventListener('astro:after-swap', initTypewriter);
</script>

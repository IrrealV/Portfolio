---
// Importamos fuente globalmente
import '@fontsource/inter';
import { SITE_INFO } from '../data/info';

interface Props {
  title?: string;
}

const { title = SITE_INFO.title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={SITE_INFO.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-black text-neutral-100 font-inter antialiased selection:bg-neutral-700 selection:text-white"
  >
    <main class="max-w-[1000px] mx-auto px-4 py-12 md:py-20">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  /* Scrollbar oscura personalizada */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: #000;
  }
  ::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 5px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>

---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
import { SITE_INFO } from '../data/info';

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_INFO.title, description = SITE_INFO.description } =
  Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0a0a0b" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <ViewTransitions />

    <!-- Theme hydration script (prevents flash) -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem('theme');
        if (theme === 'light') {
          document.documentElement.classList.remove('dark');
        } else if (theme === 'dark' || !theme) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="font-sans antialiased min-h-screen">
    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 py-12">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-(--color-border) py-8">
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 text-center">
        <p class="text-sm text-(--color-text-muted)">
          Â© {new Date().getFullYear()} Victor Manuel Heras
        </p>
      </div>
    </footer>

    <!-- Floating Theme Toggle - follows user -->
    <ThemeToggle sticky />
  </body>
</html>

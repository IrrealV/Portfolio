---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import FloatingControls from '../components/ui/FloatingControls.astro';
import NetworkBackground from '../components/ui/NetworkBackground.astro';
import { SITE_INFO } from '../data';

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_INFO.title, description = SITE_INFO.description } =
  Astro.props;

const canonicalURL = new URL(Astro.url.pathname, SITE_INFO.url);
const ogImageURL = new URL(SITE_INFO.ogImage, SITE_INFO.url);

// JSON-LD structured data for better SEO
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: SITE_INFO.author,
  url: SITE_INFO.url,
  email: SITE_INFO.email,
  jobTitle: 'Desarrollador Fullstack',
  sameAs: ['https://github.com/IrrealV', 'https://linkedin.com/in/vmheras'],
  knowsAbout: ['Angular', 'NestJS', 'TypeScript', 'DevOps', 'Web Development'],
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={SITE_INFO.keywords.join(', ')} />
    <meta name="author" content={SITE_INFO.author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#6366f1" />
    <meta name="msapplication-TileColor" content="#6366f1" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Victor Heras Portfolio" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={SITE_INFO.twitterHandle} />
    <meta name="twitter:creator" content={SITE_INFO.twitterHandle} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <ClientRouter />

    <!-- Theme hydration script (prevents flash during View Transitions) -->
    <script is:inline>
      function applyTheme() {
        const theme = localStorage.getItem('theme');
        if (theme === 'light') {
          document.documentElement.classList.remove('dark');
        } else {
          document.documentElement.classList.add('dark');
        }
      }
      // Apply immediately on page load
      applyTheme();
      // Apply to the NEW document BEFORE it becomes visible (prevents flash)
      document.addEventListener('astro:before-swap', (e) => {
        const theme = localStorage.getItem('theme');
        if (theme === 'light') {
          e.newDocument.documentElement.classList.remove('dark');
        } else {
          e.newDocument.documentElement.classList.add('dark');
        }
      });

      // Trusted Types Policy (Default) to satisfy CSP requirements without breaking legacy code
      if (window.trustedTypes && window.trustedTypes.createPolicy) {
        window.trustedTypes.createPolicy('default', {
          createHTML: (string) => string,
          createScript: (string) => string,
          createScriptURL: (string) => string,
        });
      }
    </script>
  </head>
  <body class="font-sans antialiased min-h-screen">
    <!-- Animated Network Background -->
    <NetworkBackground />

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 py-12">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-(--color-border) py-8">
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 text-center">
        <p class="text-sm text-(--color-text-muted)">
          Â© {new Date().getFullYear()} Victor Manuel Heras
        </p>
      </div>
    </footer>

    <!-- Floating Controls - Theme toggle & Back to top -->
    <FloatingControls />
  </body>
</html>

---
/**
 * Home Page - Portfolio main page
 * All sections extracted to dedicated components for maintainability
 */
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import AboutSection from '../components/sections/AboutSection.astro';
import ExperienceEducation from '../components/sections/ExperienceEducation.astro';
import ProjectsSection from '../components/sections/ProjectsSection.astro';
import StackSection from '../components/sections/StackSection.astro';
import ContactSection from '../components/sections/ContactSection.astro';
---

<Layout>
  <Hero />
  <AboutSection />
  <ExperienceEducation />
  <ProjectsSection />
  <StackSection />
  <ContactSection />
</Layout>

<script>
  import { initSpinEasterEgg } from '../scripts/easter-egg';
  import { initCVDownload } from '../scripts/cv-generator';

  document.addEventListener('astro:page-load', () => {
    initSpinEasterEgg();
    initCVDownload();
  });
</script>
